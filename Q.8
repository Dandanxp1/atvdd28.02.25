    ["modelo" => "Doblo", "fabricante" => "Fiat", "cor" => "verde", "portas" => 4, "ano" => 2013],
    ["modelo" => "Celta", "fabricante" => "GM", "cor" => "preto", "portas" => 2, "ano" => 2012],
