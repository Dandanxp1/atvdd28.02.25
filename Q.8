];

$modelos_anos = [];
$veiculos_prata = [];
$veiculos_cor_portas = [];
$veiculos_ford = [];
$veiculos_ano_2013_ou_mais = [];

foreach ($veiculos as $veiculo) {
    $modelos_anos[] = "{$veiculo['modelo']} - {$veiculo['ano']}";
    
    if ($veiculo["cor"] == "prata") {
        $veiculos_prata[] = $veiculo["modelo"];
    }
    
    $veiculos_cor_portas[] = "{$veiculo['modelo']} - Cor: {$veiculo['cor']} - Portas: {$veiculo['portas']}";
    
    if ($veiculo["fabricante"] == "Ford") {
        $veiculos_ford[] = $veiculo["modelo"];
    }
    
    if ($veiculo["ano"] >= 2013) {
        $veiculos_ano_2013_ou_mais[] = "{$veiculo['modelo']} - {$veiculo['ano']}";
    }
}
?>

