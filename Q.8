    ["modelo" => "Corsa", "fabricante" => "GM", "cor" => "branco", "portas" => 2, "ano" => 2010],
    ["modelo" => "Ranger", "fabricante" => "Ford", "cor" => "prata", "portas" => 4, "ano" => 2012],
