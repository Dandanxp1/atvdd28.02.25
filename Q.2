<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entrada de Números</title>
</head>
<body>
<h1>Digite 10 números</h1>
<form action="index.php" method="POST">
    <?php for ($i = 1; $i <= 10; $i++): ?>
        <label for="numero<?php echo $i; ?>">Número <?php echo $i; ?>:</label>
        <input type="number" id="numero<?php echo $i; ?>" name="numero<?php echo $i; ?>" required><br><br>
    <?php endfor; ?>
    <input type="submit" value="Enviar">
</form>

<?php
if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $quantNegativos = 0;
    $quantPositivos = 0;
    $quantPares = 0;
    $quantImpares = 0;
    
    for ($i = 1; $i <= 10; $i++) {
        if (isset($_POST["numero$i"])) {
            $numero = intval($_POST["numero$i"]);
            
            if ($numero < 0) {
                $quantNegativos++;
            } elseif ($numero > 0) {
                $quantPositivos++;
            }
            
            if ($numero % 2 == 0) {
                $quantPares++;
            } else {
                $quantImpares++;
            }
        }
    }
    
    echo "<h2>Resultados:</h2>";
    echo "Quantidade de números negativos: " . $quantNegativos . "<br>";
    echo "Quantidade de números positivos: " . $quantPositivos . "<br>";
    echo "Quantidade de números pares: " . $quantPares . "<br>";
    echo "Quantidade de números ímpares: " . $quantImpares . "<br>";
}
?>
</body>
</html>
